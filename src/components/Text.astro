---
export interface Props {
  font?: "primary" | "secondary";
  size?: "small" | "base" | "large";
}

const { font = "primary", size = "base" } = Astro.props as Props;
---

<p
  class={`${font === "primary" ? "font-primary" : "font-secondary"} ${
    size === "small" ? "text-18" : "base" ? "text-24" : "text-40"
  } text-neutral-02 capsize`}
>
  <slot />
</p>
