---
export interface Props {
  font?: "primary" | "secondary";
  size?: "small" | "base" | "large";
}
const { font = "secondary", size = "base" } = Astro.props as Props;
---

<span
  class={`inline-block ${
    font === "primary" ? "font-primary" : "font-secondary"
  } ${
    size === "small" ? "text-18" : "base" ? "text-24" : "text-40"
  } text-neutral-02 capsize`}
>
  <slot />
</span>
