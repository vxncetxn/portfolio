---
export interface Props {
  font?: "sans" | "serif";
  size?: "small" | "base" | "large";
}
const { font = "serif", size = "base" } = Astro.props as Props;
---

<span
  class={`inline-block ${font === "sans" ? "font-sans" : "font-serif"} ${
    size === "small"
      ? "text-16 lg:text-18"
      : "base"
      ? "text-18 sm:text-20 lg:text-24"
      : "text-28 sm:text-32 lg:text-40"
  } text-neutral-02 capsize transition-colors selection:bg-theme-selected`}
>
  <slot />
</span>
