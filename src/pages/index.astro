---
import { Scene } from "../components/Scene";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <script>
      (function () {
        function setTheme(theme: string) {
          document.documentElement.setAttribute("theme", theme);
        }

        const storedTheme = window.localStorage.getItem("theme");

        if (storedTheme) {
          setTheme(storedTheme);
        } else if (window.matchMedia("(prefers-color-scheme: dark").matches) {
          setTheme("dark");
        } else {
          setTheme("light");
        }
      })();
    </script>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <style>
      @font-face {
        font-family: "Neue Montreal";
        src: url("/PPNeueMontreal-Book.woff2") format("woff2"),
          url("/PPNeueMontreal-Book.woff") format("woff");
      }

      @font-face {
        font-family: "Cirka";
        src: url("/PPCirka-Regular.woff2") format("woff2"),
          url("/PPCirka-Regular.woff") format("woff");
      }

      :root {
        --color-neutral-01: #ffffff;
        --color-neutral-02: #1c1c1c;
      }

      [theme="dark"] {
        --color-neutral-01: #1c1c1c;
        --color-neutral-02: #ffffff;
      }

      @media (prefers-color-scheme: dark) {
        :root {
          --color-neutral-01: #1c1c1c;
          --color-neutral-02: #ffffff;
        }
      }

      html,
      body,
      main {
        width: 100vw;
        height: 100vh;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: var(--color-neutral-01);
      }

      .text {
        color: white;
        font-size: 24px;
      }
    </style>
  </head>
  <body>
    <main>
      <Scene client:idle />
    </main>
  </body>
</html>
